@model IEnumerable<HTDL.Models.DichVu>

<div class="phandoan-dichvu" style="background-color:#ffffff">
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6">
            <div class=" text-uppercase text-center p-3">
                <h2>DỊch vụ</h2>
            </div>
        </div>
        <div class="col-3">
            <div class=" text-center p-3">
                <div>@Html.ActionLink("Xem thêm >>", "DichVu", "Home", new { area = "" })</div>

            </div>
        </div>
    </div>
    <div class="row p-2 m-0">
        @foreach (var item in Model)
        {
            <div class="col-md-3 p-3">
                <a href="/Home/DatKham/?MaDv=@item.MaDV">
                    <div>
                        <img src="@item.HinhAnh" width="100%" height="150" />
                    </div>
                    <div class="text-uppercase" style="background-color: #efeef5">
                        @item.TenDV
                    </div>
                </a>
            </div>
        }
    </div>
</div>

