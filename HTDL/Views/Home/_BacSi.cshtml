@model IEnumerable<HTDL.Models.BacSi>
<div class="phandoan-bacsi" style="background-color:#f5f5f5">
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6">
            <div class=" text-uppercase text-center p-3">
                <h2>Bác sĩ</h2>
            </div>
        </div>
        <div class="col-3">
            <div class=" text-center p-3">
                <div>@Html.ActionLink("Xem thêm >>", "BacSi", "Home", new { area = "" })</div>

            </div>
        </div>
    </div>
   
    <div class="row  m-0">
        @foreach (var item in Model)
        {
            <div class="col-md-4  p-3">
                <a href="">
                    <div class="card">
                        <div class="card card-header">
                            @Html.DisplayFor(modelItem => item.TenBS)
                        </div>
                        <div class="card-body">
                            <div class="row ">
                                <div class="col-md-4 border-end">
                                    <img src="@item.Avt" width="100%" height="130" />
                                </div>
                                <div class="col-md-8 text-start">
                                    <div>
                                        @Html.DisplayFor(modelItem => item.Khoa.TenKhoa)
                                    </div>
                                    <div>
                                        @Html.DisplayFor(modelItem => item.ChucVu.TenCV)
                                    </div>
                                    <div>
                                        @Html.DisplayFor(modelItem => item.NgaySinh)

                                    </div>
                                    <div>
                                        @if (item.GioiTinh == true)
                                        {


                                            <div>Giới tính: Nam</div>

                                        }
                                        else
                                        {
                                            <div>Giới tính: Nữ</div>

                                        }
                                    </div>
                                    <div>
                                        @Html.DisplayFor(modelItem => item.SDT)
                                    </div>
                                </div>
                            </div>



                        </div>
                    </div>
                </a>

            </div>
        }
    </div>
</div>


