}


<div>
    <div class="text-center font-weight-bold  w-100 text--3  text-primary">Bạn có muốn xóa Bác Sĩ @Html.DisplayFor(model => model.TenBS) không ?</div>
    <hr />
    <dl class="dl-horizontal">
        <div class="form-group font-weight-bold">
            <dt class="control-label col-md-2">
