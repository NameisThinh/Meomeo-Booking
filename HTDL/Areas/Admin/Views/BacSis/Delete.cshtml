        </div>

        <div class="form-group font-weight-bold">
            <dt class="control-label col-md-2">
                @Html.DisplayNameFor(model => model.Khoa.TenKhoa)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Khoa.TenKhoa)
            </dd>
        </div>

        <div class="form-group font-weight-bold">
            <dt class="control-label col-md-2">
                @Html.DisplayNameFor(model => model.Avt)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Avt)
            </dd>
        </div>


        <div class="form-group font-weight-bold">
            <dt class="control-label col-md-2">
                @Html.DisplayNameFor(model => model.TenBS)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.TenBS)
