        </div>

        <div class="form-group font-weight-bold">
            <dt class="control-label col-md-2">
                @Html.DisplayNameFor(model => model.SDT)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.SDT)
            </dd>
        </div>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Delete" class="btn btn-warning w-100" /> |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "w-100  btn btn-danger" })
</div>
    }
</div>
